{
  "package": {
    "productName": "MBTilesViewer"
  },
  "build": {
    "distDir": "../build",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "npm run dev:web",
    "beforeBuildCommand": "npm run build:web"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": [
        "dmg",
        "msi",
        "deb"
      ],
      "identifier": "com.akylas.mbview",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../resources/*"],
      "externalBin": [],
      "copyright": "Â© 2021 Akylas",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": [],
        "useBootstrapper": false
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "useBootstrapper": false,
        "exceptionDomain": "localhost",
        "signingIdentity": "Apple Development: Martin Guillon (4ZZRPWM525)",
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": false,
      "path":{
        "all":true
      },
      "dialog":{
        "open":true
      },
      "shell":{
        "open": true
      },
      "fs":{
        "readFile": true,
        "scope": {
          "allow": ["$DOWNLOAD/**", "$RESOURCE/**"]
        }
      },
      "protocol": {
        "asset": true,
        "assetScope": {
          "allow": ["**"]
        }
      }
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: asset: mbtiles: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}